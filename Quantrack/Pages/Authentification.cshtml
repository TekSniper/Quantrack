@page
@model Quantrack.Pages.AuthentificationModel
@{
    Layout = "_LayoutAuth";
    ViewData["title"] = "Authentification";
}
<div class="row justify-content-center">
    <div class="col-xl-5 col-lg-4 col-md-4">
        @if(Model.WarningMessage != string.Empty)
        {
            <div class="alert alert-warning" role="alert">
                <p>
                    <h3>Attention !</h3>
                </p>
                <p>@Model.WarningMessage</p>
            </div>
        }
        @if(Model.ErrorMessage != string.Empty)
        {
            <div class="alert alert-danger" role="alert">
                <p>
                    <h3>Oups !</h3>
                </p>
                <p>@Model.ErrorMessage</p>
            </div>
        }
        <div class="card">
            <div class="card-body">
                @* <span class="mx-auto">
                    <i class="fa-solid fa-circle-user" width="50" height="50"></i>
                </span> *@
                <h3 class="text-center">Authentification</h3>
                <form method="post">
                    <div class="mb-3">
                        <label for="login" class="form-label">ID</label>
                        <input type="text" name="login" class="form-control" id="login" placeholder="Login ou Email" value="@Model.user.Login">
                    </div>
                    <div class="mb-3">
                        <label for="password" class="form-label">Mot de passe</label>
                        <input type="password" name="pwd" class="form-control" id="password" placeholder="Mot de passe" value="@Model.user.Login">
                    </div>
                    <button type="submit" class="btn btn-outline-success">
                        Se connecter
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>